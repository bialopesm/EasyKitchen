<%= simple_form_for [@recipe, @ingredient], html: { class: "ingredient form" "d-flex",
         data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }} do |f| %>
  <% if ingredient.errors.any? %>
    <div class="error-message">
      <%= ingredient.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :name, input_html: { autofocus: true } %>
  <%= f.input :quantity, input_html: { autofocus: true } %>
  <%= f.input :unit, collection: ["Kg", "L", "mL", "g"], include_blank: " ", label: "Unit", input_html: { class: "form-control" } %>

    <div class="mt-3">
      <div class="btn btn-secondary">
       <%= link_to "Cancel", ingredients_path, class: "" %>
      </div>
    </div>

  <%= f.submit "Save", class: "btn btn-success mt-3" %>
<% end %>
