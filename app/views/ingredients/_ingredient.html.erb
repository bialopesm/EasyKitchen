<%= turbo_frame_tag "ingredient_#{ingredient.id}" do %>
  <div class="ingredient border mb-1 p-2">
    <%= ingredient.name %>
    <%=  ingredient.quantity %>
    <%=  ingredient.unit %>

    <div class="ingredient__actions">
      <%= button_to "Delete",
                    ingredient_path(ingredient),
                    method: :delete,
                    class: "btn btn--light" %>
      <%= link_to "Edit",
                  edit_ingredient_path(ingredient),
                  class: "btn btn--light" %>
    </div>
  </div>
<% end %>
