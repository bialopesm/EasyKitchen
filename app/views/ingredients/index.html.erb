<div class="mb-3 p-4" style="background-color: #a8d254; opacity: 1; display: flex; justify-content: center; align-items: center; position: relative; border-radius: 0 0 20px 20px;">


  <%= link_to bookmarks_path, style: "position: absolute; left: 20px;" do %>
    <i class="fa-regular fa-circle-left fa-2xl" style="color: #000000;"></i>
  <% end %>

  <h1 class="text-center" style="margin: 0;">WHAT TO COOK ?</h1>

</div>


<div class="container-fluid" style="height: 80vh">


  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTE0g2ewE-S-TCq3A4R8JCG5tuw6agXuLXeBw&s)">
    <h2>Ingredients in your fridge</h2>
  </div>

  <div class="card-ingredients">
    <div>
      <%= link_to "+ ingredient",
          new_ingredient_path,
          class: "btn btn-primary my-3 rounded-pill box-shadow",
          data: { turbo_frame: dom_id(Ingredient.new) },
          style: "opacity: 1;" %>
    </div>

    <%= turbo_frame_tag Ingredient.new %>

    <%= turbo_frame_tag "ingredients" do %>
      <%= render @ingredients %>
    <% end %>
  </div>

    <div style="display: flex; flex-direction: column; align-items: center;">
      <div data-controller="recipe-request" class="btn btn-info mb-1 mt-3 rounded-pill box-shadow" style="opacity: 1;">
        <%= link_to "Let's Cook", recipes_path, data: {action: "click->recipe-request#handleClick"} %>
      </div>
    </div>
</div>
