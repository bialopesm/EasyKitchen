<div class="container">
  <div class="header">

    <h1>ingredients</h1>
    <div class="btn btn-primary">

    <%= link_to "New ingredient",
                new_ingredient_path,
                data: { turbo_frame: dom_id(Ingredient.new) } %>
    </div>
  </div>

  <%= render "form", ingredient: @ingredient || Ingredient.new %>

  <%= turbo_frame_tag "ingredients" do %>
    <%= render partial: "ingredient", collection: @ingredients %>
  <% end %>
</div>
