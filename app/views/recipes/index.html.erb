<div class="mb-3 p-4" style="background-color: #a8d254; opacity: 0.5; display: flex; justify-content: center; align-items: center; position: relative;">

  <%= link_to ingredients_path, style: "position: absolute; left: 20px;" do %>
    <i class="fa-regular fa-circle-left fa-2xl" style="color: #000000;"></i>
  <% end %>

  <h1 class="text-center" style="margin: 0;">RECIPES SUGGESTIONS</h1>

</div>

  <div class="accordion" id="recipeAccordion">
    <!-- Recipes -->
    <% @recipes_from_gpt.each_with_index do |recipe, index| %>
    <div class="accordion-item border-top mb-3">
      <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button  <%= 'collapsed' if index > 0 %>" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_<%= index %>" aria-expanded="true" aria-controls="collapseOne">
          <%= recipe["Recipe title"] %>
        </button>
      </h2>
      <div id="collapse_<%= index %>" class="accordion-collapse collapse <%= 'show' if index < 1 %>" aria-labelledby="heading_<%= index %>" data-bs-parent="#recipeAccordion">
        <div class="accordion-body">
            <p><strong>Ingredients:</strong> <%= recipe["Ingredients list"] %></p>
            <p><strong>Preparation Time:</strong> <%= recipe["Preparation time"] %></p>

          <%#= link_to 'Let s do it!', recipe_path(recipe_id), class:"btn btn-success btn-sm" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
