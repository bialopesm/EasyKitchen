<div class="container mt-3">
  <div class="header bg-lightgreen p-3 mb-3">
    <h4 class="text-center text-black">RECIPE SUGGESTIONS</h4>
  </div>

  <div class="accordion" id="recipeAccordion">
    <!-- Recipe 1 -->
    <div class="accordion-item border-top mb-3">
      <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Recipe 1
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#recipeAccordion">
        <div class="accordion-body">
          <p>Brief recipe instructions.</p>
          <p>Ingredients used in the recipe.</p>
          <p>Estimated time to prepare.</p>
           <%# <button class="btn btn-success btn-sm">Let's do it!</button> %>
          <%= link_to 'Let s do it!', recipe_path(1), class:"btn btn-success btn-sm" %>
        </div>
      </div>
    </div>

