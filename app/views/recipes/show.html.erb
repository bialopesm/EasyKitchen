  <%# -------------------- Header ------------------ %>

<div class="mb-3 p-4" style="background-color: #a8d254; opacity: 0.5; display: flex; justify-content: center; align-items: center; position: relative;">

  <%= link_to recipes_path, style: "position: absolute; left: 20px;" do %>
    <i class="fa-regular fa-circle-left fa-2xl" style="color: #000000;"></i>
  <% end %>

  <h1 class="text-center" style="margin: 0;">YOUR RECIPE</h1>

</div>


  <%# -------------------- Display recipe ------------------ %>

<div class="border m-3">
  <p><strong>Recipe title:</strong> <%= params["recipe"]["Recipe title"] %></p>
  <p><strong>Preparation time:</strong> <%= params["recipe"]["Preparation time"] %></p>
  <p><strong>Servings:</strong> <%= params["recipe"]["Servings"]%></p>
  <p><strong>Step-by-step:</strong><%= params["recipe"]["Step-by-step"] %></p>
</div>


  <%# -------------------- Buttons ------------------ %>

<div class="d-flex justify-content-center">

<%= button_to 'I did it',
  { controller: "recipes",
    action: "create",
    recipe_data: params.require(:recipe).permit("Recipe title", "Preparation time", "Servings", "Step-by-step"),
    done: true }, # Passing done: true here
  method: :post,
  class: "btn btn-success mx-1",
  data: { turbo: true } %>



<%= button_to 'Save it for later',
  { controller: "recipes",
    action: "create",
    recipe_data: params.require(:recipe).permit("Recipe title", "Preparation time", "Servings", "Step-by-step"),
    done: false }, # Adding done parameter with value false
  method: :post,
  class: "btn btn-success mx-1",
  data: { turbo: true } %>

</div>
